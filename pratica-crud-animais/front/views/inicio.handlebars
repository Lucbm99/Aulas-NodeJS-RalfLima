{{!-- formulário --}}

<form action="/cadastrar" method="POST">
   <label>Nome do animal:</label>
   <input type="text" name="nome_animal" placeholder="Digite o nome do animal.." class="form-control">

   <label>Quantidade de patas:</label> 
   <input type="number" name="patas" placeholder="Digite a quantidade de patas..." class="form-control">

   <label>Classe (mamífero, anfíbio): </label>
   <input type="text" name="classe_animal" placeholder="Digite a classe do animal..." class="form-control">

   <input type="submit" value="Cadastrar" class="btn btn-primary">

</form>

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>Nome do animal</th>
            <th>Quantidade de patas</th>
            <th>Classe</th>
            <th>Operações</th>
        </tr>
    </thead>
    <tbody>

        {{#each dados}}
        <tr>
            <td>{{nome}}</td>
            <td>{{patas}}</td>
            <td>{{classe}}</td>
            <td><a href="selecionar/{{id}}">Selecionar</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>